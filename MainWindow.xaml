<Window x:Class="fikriye.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fikriye"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFBE19F1">
        <TextBox x:Name="txt_username" HorizontalAlignment="Center" Margin="0,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="30"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="176,131,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="PassWord" HorizontalAlignment="Left" Margin="176,190,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Button Content="Login
" HorizontalAlignment="Center" Margin="0,275,0,0" VerticalAlignment="Top" Height="41" Width="85" FontSize="18" FontWeight="Bold" Click="Button_Click"/>
        <Label Content="PHARMACY MANAGEMENT SYSTEM LOGIN PAGE" HorizontalAlignment="Left" Margin="176,55,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Sitka Banner Semibold"/>
        <PasswordBox x:Name="txt_pass" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" Width="200" Height="29"/>
    </Grid>
</Window>
